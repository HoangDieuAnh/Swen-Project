<% content_for :head do %>
  <script type="text/javascript">
   $(function()
{
	$('#datePicker').datePicker();
});
  </script>
<% end %>
<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for :event, :url => {:controller => 'event', :action => 'create'}, role: 'form' do |f| %>
      <h2>Get excited!!!<small>It's just for you</small></h2>
      <hr class="colorgraph">
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control input-lg', placeholder: 'Title' %>
      </div>
      <div class="form-group">
        <%= f.text_field :eventType, class: "form-control input-lg", placeholder: 'Type: Dance, coffee meeting, BBQ..' %>
      </div>
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :eventDate, class: "form-control input-lg", placeholder: "dd-mm-yyyy", id:"datePicker" %>
          </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :eventTime, class: "form-control input-lg", placeholder: "time: hh:mm" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.text_field :venue, class: 'form-control input-lg', placeholder: 'Venue' %>
      </div>
      <div class="form-group">
      	
        <%= f.text_field :description, class: 'form-control input-lg', placeholder: 'Description'%>
      </div>
      
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-6 col-md-6"><%= f.submit 'Create' , class: "btn btn-primary btn-block btn-lg" %></div>
      </div>
    <%end%>
    <% if @event && @event.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @event.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
  </div>
</div>
<!-- Modal -->
</div>

